# Streamlit Secrets Template
# Skopiuj zawartość tego pliku do Streamlit Cloud → Settings → Secrets

# API Keys dla AI (wybierz jednego lub więcej)
ANTHROPIC_API_KEY = "sk-ant-api..."
GOOGLE_API_KEY = "AIza..."
OPENAI_API_KEY = "sk-..."

# Trading212 API (opcjonalne - jeśli używasz Trading212)
# Pobierz z: https://www.trading212.com/en/Trading-API
TRADING212_API_KEY = "twoj-trading212-api-key"

# Google Sheets Credentials (opcjonalne - jeśli używasz Google Sheets jako backup)
# Skopiuj zawartość z credentials.json:
[gcp_service_account]
type = "service_account"
project_id = "twoj-project-id"
private_key_id = "..."
private_key = "-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
client_email = "your-service-account@project.iam.gserviceaccount.com"
client_id = "..."
auth_uri = "https://accounts.google.com/o/oauth2/auth"
token_uri = "https://oauth2.googleapis.com/token"
auth_provider_x509_cert_url = "https://www.googleapis.com/oauth2/v1/certs"
client_x509_cert_url = "..."
